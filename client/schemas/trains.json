{
    "TrainID": {
      "type": "hidden"
    },
    "Make": {
      "type": "string",
      "maxLength": 255,
      "title": "Make"
    },
    "Model": {
      "type": "string",
      "maxLength": 255,
      "title": "Model"
    },
    "ShortName": {
      "type": "string",
      "maxLength": 20,
      "title": "Short Name (required)",
      "required": true
    },
    "LongName": {
      "type": "string",
      "title": "LongName"
    },
    "Operational": {
      "type": "string",
      "enum": ["","Yes", "No"],
      "title": "Operational"
    },
    "Picture": {
      "type": "file",
      "title": "Picture",
      "media": {
        "binaryEncoding": "base64",
        "contentMediaType": "image/png, image/jpeg"
      }
    },
    "DCCStatus": {
      "type": "string",
      "enum": ["","Incompatible", "No socket", "Ready", "Fitted"],
      "title": "DCCStatus"
    },
    "DCCNumber": {
      "type": "integer",
      "minimum": 1,
      "maximum": 9999,
      "title": "DCCNumber"
    },
    "DCCConfig": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "SocketLocation": {
            "type": "string",
            "maxLength": 255,
            "title": "SocketLocation"
          },
          "SocketType": {
            "type": "string",
            "enum": ["", "4 Pin", "6 Pin", "8 Pin", "21 Pin", "Next 18", "PluX 8", "PluX 16", "PluX 22"],
            "title": "SocketType"
          },
          "ChipModel": {
            "type": "string",
            "title": "ChipModel"
          },
          "ChipType": {
            "type": "string",
            "enum": ["", "motor/function", "multifunction sound", "sound only", "function only"],
            "title": "ChipType"
          }
        }
      }
    },
    "DCCFunctions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "FunctionNumber": {
            "type": "integer",
            "minimum": 0,
            "maximum": 28,
            "title": "FunctionNumber"
          },
          "FunctionType": {
            "type": "string",
            "enum": ["", "latching", "momentary"],
            "title": "FunctionType"
          },
          "Function": {
            "type": "string",
            "title": "Function"
          }
        }
      }
    }
}